{
  "manifest_version": 2,

  "name": "Gmail Timer",
  "description": "Shows how much time you've spent in Gmail",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["ifvisible.min.js", "app.js"],
      "css": ["app.css"]
    }
  ],
  "permissions": [
    "storage"
  ]
}
